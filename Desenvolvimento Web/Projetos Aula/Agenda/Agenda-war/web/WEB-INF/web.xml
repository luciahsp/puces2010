<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>ListarPessoas</servlet-name>
        <servlet-class>org.agenda.web.ListarPessoas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExibePessoa</servlet-name>
        <servlet-class>org.agenda.web.ExibePessoa</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsereTelefone</servlet-name>
        <servlet-class>org.agenda.web.InsereTelefone</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListarPessoas</servlet-name>
        <url-pattern>/ListarPessoas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExibePessoa</servlet-name>
        <url-pattern>/ExibePessoa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsereTelefone</servlet-name>
        <url-pattern>/InsereTelefone</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
